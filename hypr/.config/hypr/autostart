#!/usr/bin/bash

# Policy Authentication Agent
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# variables
scripts=~/.scripts
wallpapers=~/.wallpapers

# waybar
$scripts/launch_waybar &

# wallpaper
$scripts/wall $(find $wallpapers/ -type f | shuf -n 1) &

# clipboard
wl-paste --watch cliphist store &

# Applets
nm-applet --indicator &
blueman-applet &
